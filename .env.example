# Azure Function Configuration
FUNCTIONS_WORKER_RUNTIME=node
WEBSITE_NODE_DEFAULT_VERSION=~20

# Azure Storage (for local development, use Azurite)
AzureWebJobsStorage=UseDevelopmentStorage=true

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Get chat ID from @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Job Search Configuration
# Time window for job filtering: DAY (24h), WEEK (7d), or MONTH (30d)
JOB_WINDOW=DAY

# Adzuna India API (FREE - 1,000 calls/month)
# Sign up at: https://developer.adzuna.com/signup
ADZUNA_APP_ID=your_adzuna_app_id_here
ADZUNA_APP_KEY=your_adzuna_app_key_here

# JSearch via RapidAPI (FREE - 500 calls/month)
# Aggregates LinkedIn + Indeed + Glassdoor jobs
# Sign up at: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
RAPIDAPI_KEY=your_rapidapi_key_here
